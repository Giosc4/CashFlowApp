<!-- fragment_statistics.xml -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".StatisticsFragment">

    <!-- Pulsanti per selezionare il tipo di grafico -->
    <Button
        android:id="@+id/btnPieChart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grafico a Torta"/>

    <Button
        android:id="@+id/btnBarChart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grafico a Barre"/>

    <!-- Aggiungi altri pulsanti per altri tipi di grafico, se necessario -->
</LinearLayout>
