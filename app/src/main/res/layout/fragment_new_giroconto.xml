<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp" >

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuovo Giroconto"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewProvenienza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Provenienza"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        android:layout_marginTop="16dp"/>

    <Spinner
        android:id="@+id/accountSpinnerProv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Scegli un conto"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewProvenienza"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/textViewArrivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arrivo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/accountSpinnerProv"
        android:layout_marginTop="16dp"/>

    <Spinner
        android:id="@+id/accountSpinnerArrivo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Scegli un conto"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewArrivo"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/saveGirocontoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salva Giroconto"
        app:layout_constraintTop_toBottomOf="@id/accountSpinnerArrivo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
