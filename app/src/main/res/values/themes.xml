<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CashFlow" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/green_light_background</item>
        <item name="colorOnPrimary">@color/green_light_dark_background</item>
        <item name="android:statusBarColor">@color/green_light_background</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="textFillColor">@color/white</item>

    </style>

    <style name="Base.Theme.CashFlow.Dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Personalizza il tuo tema scuro qui. -->
        <item name="colorPrimary">@color/dark_green_bar_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/dark_green_bar_color</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="textFillColor">@color/white</item>

    </style>


    <style name="AppTheme" parent="Base.Theme.CashFlow">
    </style>

</resources>
